<resources>

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="colorControlActivated">@color/colorControlHighlight</item>
        <item name="searchViewStyle">@style/AppTheme.SearchView</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
    </style>

    <style name="AppTheme" parent="Base.AppTheme"/>

    <style name="AppTheme.NoActionBar" parent="Base.AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Transparent" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="background">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AppTheme.SearchView" parent="Widget.AppCompat.Light.SearchView">
        <item name="searchHintIcon">@null</item>
        <item name="queryBackground">@null</item>
        <item name="submitBackground">@null</item>
    </style>

    <style name="AppTheme.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.TabLayout" parent="@style/Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">@dimen/default_tab_indicator_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
    </style>

    <style name="AppTheme.TabLayout.Dark" parent="AppTheme.TabLayout">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabBackground">?attr/colorPrimaryDark</item>
        <item name="tabTextAppearance">@style/AppTheme.Text.Tab</item>
        <item name="tabSelectedTextColor">?attr/colorAccent</item>
    </style>

    <style name="AppTheme.Text.Tab" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_secondary</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">@dimen/button_internal_padding</item>
        <item name="android:paddingRight">@dimen/button_internal_padding</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:drawablePadding">@dimen/button_inline_margin_horizontal</item>
    </style>

    <!-- Flat button-->
    <style name="AppTheme.Button.Flat" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textColor">@color/colorTextLinkNormal</item>
        <item name="android:textSize">@dimen/text_secondary</item>
        <item name="android:paddingLeft">@dimen/button_internal_padding</item>
        <item name="android:paddingRight">@dimen/button_internal_padding</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/btn_color_transparent</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/button_inline_margin_horizontal</item>
    </style>

    <style name="AppTheme.Button.Flat.Edit">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/button_edit_margin_top</item>
    </style>

    <!-- Flat button-->
    <style name="AppTheme.Button.Flat.Full">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/colorTextLinkNormal</item>
        <item name="android:background">@drawable/btn_color_primary_full</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:textSize">@dimen/text_primary</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Flat button-->
    <style name="AppTheme.Button.Flat.Colored">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_color_accent</item>
    </style>

    <style name="AppTheme.Button.Flat.Colored.White">
        <item name="android:textColor">@color/colorTextLinkNormal</item>
        <item name="android:background">@drawable/btn_color_primary</item>
    </style>

    <style name="AppTheme.Button.Flat.Colored.White.Dense">
        <item name="android:layout_height">@dimen/button_dense_height</item>
        <item name="android:textSize">@dimen/text_tertiary</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="AppTheme.Button.Flat.Full.Colored">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_color_accent_full</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.Button.Flat.Primary">
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="AppTheme.Button.Flat.Secondary">
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <!-- Full width flat button with text alignment on left -->
    <style name="AppTheme.Button.Flat.Full.Left">
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/button_inline_margin_horizontal</item>
    </style>

    <!-- Flat dense button-->
    <style name="AppTheme.Button.Flat.Dense" parent="AppTheme.Button.Flat">
        <item name="android:layout_height">@dimen/button_dense_height</item>
        <item name="android:textSize">@dimen/text_tertiary</item>
    </style>

    <!-- Flat colered dense button-->
    <style name="AppTheme.Button.Flat.Colored.Dense">
        <item name="android:layout_height">@dimen/button_dense_height</item>
        <item name="android:textSize">@dimen/text_tertiary</item>
    </style>

    <!-- Flat dense button-->
    <style name="AppTheme.Button.Flat.Dense.Right" parent="AppTheme.Button.Flat">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/button_inline_margin_horizontal</item>
    </style>

    <style name="AppTheme.Button.Flat.Right">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/button_inline_margin_horizontal</item>
    </style>

    <style name="AppTheme.Button.Flat.Toolbar">
        <item name="android:textSize">@dimen/text_primary</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginLeft">@dimen/button_inline_margin_horizontal</item>
    </style>

    <style name="AppTheme.Button.Flat.Left" parent="AppTheme.Button.Flat">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_gravity">center_vertical|left</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/button_inline_margin_horizontal</item>
    </style>

    <style name="AppTheme.Button.Flat.Left.Inline" parent="AppTheme.Button.Flat">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_gravity">center_vertical|left</item>
        <item name="android:layout_marginLeft">@dimen/button_inline_margin_horizontal</item>
    </style>

    <style name="AppTheme.Button.Flat.Right.Inline" parent="AppTheme.Button.Flat">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:layout_marginRight">@dimen/button_inline_margin_horizontal</item>
    </style>

    <!-- Icon button style -->
    <style name="AppTheme.ImageButton">
        <item name="android:layout_width">@dimen/button_icon_width</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="AppTheme.ImageButton.Toolbar">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <!-- Icon button style -->
    <style name="AppTheme.ImageButton.Inline">
        <item name="android:layout_marginRight">@dimen/button_inline_margin_horizontal</item>
        <item name="android:layout_marginLeft">@dimen/button_inline_margin_horizontal</item>
    </style>

    <style name="AppTheme.ImageButton.Right">
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
    </style>

    <!-- Button style >>> -->

    <!-- <<< Base Text styles -->
    <style name="AppTheme.Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AppTheme.Text.SubHeader" parent="AppTheme.Text">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textSize">@dimen/text_tertiary</item>
        <item name="android:minHeight">@dimen/text_tile_height_subheader</item>
        <item name="android:padding">@dimen/text_padding_default</item>
    </style>

    <style name="AppTheme.Text.SubHeader.Dense" parent="AppTheme.Text.SubHeader">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:padding">@null</item>
        <item name="android:paddingLeft">@dimen/text_padding_default</item>
        <item name="android:paddingRight">@dimen/text_padding_default</item>
    </style>

    <style name="AppTheme.Text.SubHeader.Empty" parent="AppTheme.Text">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingTop">@dimen/text_margin_description</item>
        <item name="android:paddingBottom">@dimen/text_margin_description</item>
        <item name="android:paddingLeft">@dimen/text_padding_default</item>
        <item name="android:paddingRight">@dimen/text_padding_default</item>
    </style>

    <style name="AppTheme.Text.GridItem.Label" parent="AppTheme.Text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_tertiary</item>
        <item name="android:layout_marginTop">@dimen/recycler_view_item_label_margin_vertical</item>
    </style>

    <style name="AppTheme.Text.Title" parent="AppTheme.Text">
        <item name="android:gravity">left</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:minHeight">@dimen/text_tile_height</item>
    </style>

    <style name="AppTheme.Text.Toolbar.Title" parent="AppTheme.Text.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingRight">@dimen/text_padding_default</item>
        <item name="android:paddingLeft">@dimen/text_padding_toolbar_left</item>
    </style>

    <style name="AppTheme.Messagebar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/text_tile_height</item>
        <item name="android:textSize">@dimen/text_secondary</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">@dimen/list_item_height_single_line</item>
    </style>

    <style name="AppTheme.Grid.Error" parent="AppTheme.Messagebar">
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="AppTheme.Text.Body" parent="AppTheme.Text">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">@dimen/text_secondary</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="AppTheme.Text.Label" parent="AppTheme.ListView.Text">
        <item name="android:textSize">@dimen/text_secondary</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:minHeight">@dimen/text_tile_height_dense</item>
        <item name="android:drawablePadding">@dimen/text_padding_default</item>
    </style>

    <style name="AppTheme.Text.Label.Inline" parent="AppTheme.Text.Label">
        <item name="android:layout_marginLeft">@dimen/card_margin_horizontal</item>
        <item name="android:padding">@null</item>
        <item name="android:minHeight">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="AppTheme.Text.Label.Right">
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/text_padding_default</item>
    </style>

    <style name="AppTheme.Text.Label.Left">
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/text_padding_default</item>
    </style>

    <style name="AppTheme.Text.LabelInline" parent="AppTheme.ListView.Text">
        <item name="android:textSize">@dimen/text_secondary</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:layout_marginRight">@dimen/text_inline_margin_default</item>
        <item name="android:layout_marginTop">@dimen/text_inline_margin_default</item>
    </style>

    <style name="AppTheme.Text.Label.Body" parent="AppTheme.Text.Body">
        <item name="android:textSize">@dimen/text_primary</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <!-- Use if you want to show EditText like hint -->
    <style name="AppTheme.Text.Hint" parent="AppTheme.Text.Body">
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>
    <!-- Text styles >>> -->

    <style name="AppTheme.Text.Label.Colored">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Text.Label.Body.Inline">
        <item name="android:layout_marginRight">@dimen/text_inline_margin_default</item>
    </style>

    <!-- EditText styles >>> -->

    <style name="AppTheme.ListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/list_item_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/list_item_padding_vertical</item>
    </style>

    <style name="AppTheme.ListView.Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:orientation">vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">@dimen/list_item_margin_horizontal</item>
        <item name="android:paddingRight">@dimen/list_item_margin_horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AppTheme.ListView.Item.Single.Line" parent="AppTheme.ListView.Item">
        <item name="android:minHeight">@dimen/list_item_height_single_line</item>
    </style>

    <style name="AppTheme.ListView.Item.Single.Line.Dense" parent="AppTheme.ListView.Item">
        <item name="android:minHeight">@dimen/list_item_height_single_line_dense</item>
    </style>

    <style name="AppTheme.ListView.Item.Two.Line" parent="AppTheme.ListView.Item">
        <item name="android:minHeight">@dimen/list_item_height_two_line</item>
    </style>

    <!-- Same as list item but without a click and has a white background -->
    <style name="AppTheme.ListView.Item.Disabled">
        <item name="android:background">@color/white</item>
        <item name="android:clickable">false</item>
    </style>

    <!-- Same as list item single line but without a click and has a white background -->
    <style name="AppTheme.ListView.Item.Single.Line.Disabled" parent="AppTheme.ListView.Item.Disabled">
        <item name="android:minHeight">@dimen/list_item_height_single_line</item>
    </style>

    <!-- Same as list item two line but without a click and has a white background -->
    <style name="AppTheme.ListView.Item.Two.Line.Disabled" parent="AppTheme.ListView.Item.Disabled">
        <item name="android:minHeight">@dimen/list_item_height_two_line</item>
    </style>

    <style name="AppTheme.ListView.Item.Single.Line.Dense.Disabled" parent="AppTheme.ListView.Item.Disabled">
        <item name="android:minHeight">@dimen/list_item_height_single_line_dense</item>
    </style>

    <style name="AppTheme.ListView.Icon">
        <item name="android:layout_width">@dimen/list_item_icon_size</item>
        <item name="android:layout_height">@dimen/list_item_icon_size</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:scaleType">center</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="AppTheme.ListView.Icon.Small">
        <item name="android:layout_width">@dimen/icon_height</item>
        <item name="android:layout_height">@dimen/icon_height</item>
    </style>

    <style name="AppTheme.ListView.Icon.Small.Left">
        <item name="android:layout_marginRight">@dimen/list_item_margin_horizontal</item>
    </style>

    <style name="AppTheme.ListView.Icon.Big" parent="AppTheme.ListView.Icon">
        <item name="android:layout_width">@dimen/list_item_icon_size_big</item>
        <item name="android:layout_height">@dimen/list_item_icon_size_big</item>
    </style>

    <style name="AppTheme.ListView.Icon.Big.Left" parent="AppTheme.ListView.Icon.Big">
        <item name="android:layout_marginRight">@dimen/list_item_margin_horizontal</item>
    </style>

    <style name="AppTheme.ListView.Icon.Big.Right" parent="AppTheme.ListView.Icon.Big">
        <item name="android:layout_marginLeft">@dimen/list_item_margin_horizontal</item>
    </style>

    <style name="AppTheme.ListView.Icon.Left" parent="AppTheme.ListView.Icon">
        <item name="android:layout_marginRight">@dimen/list_item_margin_horizontal</item>
    </style>

    <style name="AppTheme.ListView.Text" parent="AppTheme.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.ListView.Text.Title.Single.Line" parent="AppTheme.ListView.Text">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/list_item_margin_horizontal</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AppTheme.ListView.Text.Title" parent="AppTheme.ListView.Text">
        <item name="android:textSize">@dimen/text_primary</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AppTheme.ListView.Text.Title.Light" parent="AppTheme.ListView.Text.Title">
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="AppTheme.ListView.Label.Icon" parent="AppTheme.ListView.Icon">
        <item name="android:layout_width">@dimen/proof_icon_size</item>
        <item name="android:layout_height">@dimen/proof_icon_size</item>
        <item name="android:layout_marginLeft">@dimen/list_item_margin_horizontal</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">@dimen/list_text_padding_vertical</item>
    </style>

    <style name="AppTheme.ListView.Text.Body" parent="AppTheme.ListView.Text">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_secondary</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:layout_marginTop">@dimen/list_text_padding_vertical</item>
    </style>

    <style name="AppTheme.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:background">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:background">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/dialog_min_width</item>
    </style>

    <style name="AppTheme.Dialog.ButtonBar" parent="AppTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/dialog_default_button_bar_padding</item>
    </style>

    <style name="AppTheme.Dialog.Text" parent="AppTheme.Text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="AppTheme.Dialog.Text.Title" parent="AppTheme.Text">
        <item name="android:gravity">left</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:paddingTop">@dimen/dialog_default_text_padding_horizontal</item>
        <item name="android:paddingBottom">@dimen/dialog_default_text_padding_horizontal</item>
        <item name="android:paddingLeft">@dimen/dialog_default_text_padding_horizontal</item>
    </style>

    <style name="AppTheme.Dialog.Text.Body">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:paddingLeft">@dimen/dialog_default_text_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/dialog_default_text_padding_horizontal</item>
        <item name="android:textSize">@dimen/text_secondary</item>
    </style>

    <style name="AppTheme.Dialog.Alert.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/dialog_default_text_input_layout_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/dialog_default_text_input_layout_padding_horizontal</item>
    </style>

    <style name="AppTheme.Dialog.Button.Flat" parent="AppTheme.Button.Flat">
